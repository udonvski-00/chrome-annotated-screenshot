{
  "manifest_version": 3,
  "name": "ファイル名スクショにつける君",
  "version": "2.0.0",
  "description": "html内にある画像・動画のファイル名をのせたスクショをとるよ。escで止まるよ",
  "action": {
    "default_title": "Capture with URL labels"
  },
  "commands": {
    "capture_full_page": {
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      },
      "description": "ページ全体をキャプチャして URL ラベル付きで保存"
    },
    "capture_selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+2"
      },
      "description": "選択範囲をキャプチャして URL ラベル付きで保存"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "scripting",
    "downloads",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
